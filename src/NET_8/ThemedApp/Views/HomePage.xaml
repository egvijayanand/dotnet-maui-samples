<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ThemedApp.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ThemedApp.Views"
    Title="Home"
    mc:Ignorable="d">
    <ContentPage.Content>
        <Grid>
            <VerticalStackLayout
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <Label Text="Select a Theme" />
                <Picker
                    SelectedIndexChanged="OnThemeChanged"
                    WidthRequest="200">
                    <Picker.Items>
                        <x:String>Default</x:String>
                        <x:String>Theme1</x:String>
                        <x:String>Theme2</x:String>
                        <x:String>Theme3</x:String>
                        <x:String>Theme4</x:String>
                    </Picker.Items>
                </Picker>
            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
