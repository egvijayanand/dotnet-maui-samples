<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0-windows</TargetFramework>
        <OutputType>WinExe</OutputType>

        <!-- WPF -->
        <UseWPF>true</UseWPF>

        <!-- Project Options -->
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <RootNamespace>DateCalculator.Wpf</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\DateCalculator.Shared\DateCalculator.Shared.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Resource Include="Fonts\OpenSans-Regular.ttf" />
        <Resource Include="Fonts\OpenSans-SemiBold.ttf" />
    </ItemGroup>

</Project>
